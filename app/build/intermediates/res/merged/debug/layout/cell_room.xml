<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    tools:context=".ui.activities.ListRoomsActivity"
    tools:ignore="MissingPrefix"
    android:layout_height="wrap_content">

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/txtNameRoom"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Il y a 22 person connectÃ©e...."
        fontPath="fonts/Roboto-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imagePerson"
        android:layout_toRightOf="@id/txtNameRoom"
        android:layout_toEndOf="@id/txtNameRoom"
        android:layout_alignBottom="@id/txtNameRoom"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtNumberPerson"
        android:layout_toRightOf="@id/imagePerson"
        android:layout_toEndOf="@id/imagePerson"
        android:layout_alignBottom="@id/imagePerson"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="23sp"
        android:text="(22)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>